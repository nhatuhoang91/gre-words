<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_item_drawable"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/search_item_word_name"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/search_item_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/indian_red"
        android:textSize="@dimen/search_item_part"
        android:layout_margin="10dp"/>

</RelativeLayout>